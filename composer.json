{
    "name": "coservas/inn-authenticity-checker",
    "authors": [
        {
            "name": "Sergei Vasilev",
            "email": "vasiliev05@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "require": {},
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "friendsofphp/php-cs-fixer": "^2.16"
    },
    "scripts": {
        "fix":  [
            "@php-cs-fixer ./src",
            "@php-cs-fixer ./tests"
        ],
        "test": "./vendor/bin/phpunit",
        "php-cs-fixer": "./vendor/bin/php-cs-fixer fix --show-progress=dots --rules=@PSR2"
    }
}
